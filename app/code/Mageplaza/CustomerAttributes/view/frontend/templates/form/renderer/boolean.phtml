<?php
$fieldCssClass = 'field field-' . $block->getHtmlId();
$fieldCssClass .= $block->isRequired() ? ' required' : '';
?>
<div class="<?= /* @escapeNotVerified */ $fieldCssClass; ?>">
    <label class="label"
           for="<?= $block->getHtmlId() ?>"><span><?= $block->escapeHtml($block->getLabel()) ?></span></label>
    <div class="control">
        <select id="<?= $block->getHtmlId() ?>"
                name="<?= $block->getHtmlId() ?>"<?php if ($block->getHtmlClass()): ?> class="select <?= $block->getHtmlClass() ?>"<?php endif; ?>>
            <?php foreach ($block->getOptions() as $option): ?>
                <option value="<?= $block->escapeHtml($option['value']) ?>"<?php if ($option['value'] == $block->getValue()): ?> selected="selected"<?php endif; ?>><?= $block->escapeHtml($option['label']) ?></option>
            <?php endforeach; ?>
        </select>
    </div>
</div>
