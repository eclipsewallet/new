$fieldCssClass = 'field field-' . $block->getHtmlId();
$fieldCssClass .= $block->isRequired() ? ' required' : '';
?>
<div class="<?= /* @escapeNotVerified */ $fieldCssClass; ?>">
    <label class="label"
           for="<?= $block->getHtmlId() ?>"><span><?= $block->escapeHtml($block->getLabel()) ?></span></label>
    <div class="control">
        <?php foreach ($block->getOptions() as $option): ?>
        <div class="visual-option">
            <div class="media" onclick="jQuery(this).parent().find('input:not(:disabled)').trigger('click')">
                <?= $block->getMedia($option['value']) ?>
            </div>
            <div class="options">
                <input type="radio" class="radio" name="<?= $block->getHtmlId() ?>" id="<?= $block->getHtmlId() . $option['value'] ?>"
                       value="<?= $block->escapeHtml($option['value']) ?>"<?php if ($option['value'] == $block->getValue()): ?> checked="checked"<?php endif; ?>>
                <label for="<?= $block->getHtmlId() . $option['value'] ?>">
                    <span><?= $block->escapeHtml($option['label']) ?></span>
                </label>
            </div>
        </div>
        <?php endforeach; ?>
    </div>
</div>
