<div id="mpproductlabels-general">
    <?php echo $block->getForm()->getHtml() ?>
</div>

<script type="text/javascript">
    require(['jquery', 'mage/translate'], function ($, $t) {
        var stateElm = $("#rule_state");
        var state = stateElm.text();

        switch (state) {
            case $t('Done') :
                stateElm.addClass('grid-severity-minor');
                // stateElm.css({'background': '#afafaf'});
                break;
            case $t('Queue') :
                stateElm.addClass('grid-severity-notice');
                stateElm.css({'background': '#e9efdf', 'color': '#37af0c'});
                break;
            case $t('Running') :
                stateElm.addClass('grid-severity-notice');
                break;
        }
        stateElm.css({'padding': '5px'});
    });
</script>