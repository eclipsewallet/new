/** @var \Mageplaza\ProductLabels\Block\Product\Label $block */
$product = $block->getProduct();

foreach ($block->getRulesApplyProduct($product) as $rule): ?>
    <?php if ($block->validateProductInRule($rule, $product->getId())): ?>
        <div id="design-labels-<?php echo $rule->getId(); ?>-<?php echo $product->getId() ?>"
             class="mpproductlabel-label" data-mage-init='{"mpLabels": <?php echo $block->getDataLabel($rule) ?>}'
             style="display: none">
            <img id="design-label-image-<?php echo $rule->getId(); ?>-<?php echo $product->getId() ?>"
                 class="mpproductlabel-imglabel" src="<?php echo $block->getSrcImg($rule); ?>">
            <span id="design-label-text-<?php echo $rule->getId(); ?>-<?php echo $product->getId() ?>"
                  class="mpproductlabel-textlabel"><?php echo $block->replaceLabel($rule->getLabel(), $product->getId()); ?></span>
        </div>
        <style><?php echo $block->replaceCustomCss($rule); ?></style>
    <?php endif; ?>
<?php endforeach; ?>
