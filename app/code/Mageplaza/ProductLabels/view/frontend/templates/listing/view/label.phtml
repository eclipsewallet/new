/** @var \Mageplaza\ProductLabels\Block\Listing\Label $block */
$product = $this->getCatProduct();

foreach ($block->getRulesApplyProduct($product) as $rule): ?>
    <?php if ($block->validateProductInRule($rule, $product->getId())): ?>
        <?php $styleImg = $block->getSrcImg($rule) ? 'width: 100%; height: 100%' : '' ?>
        <div id="design-labels-<?php echo $rule->getId() ?>-<?php echo $product->getId() ?>"
             class="mpproductlabel-label" style="<?php echo $block->getLabelStyle($rule); ?>; display: none;">
            <img id="design-label-image-<?php echo $rule->getId() ?>-<?php echo $product->getId() ?>"
                 class="mpproductlabel-imglabel" src="<?php echo $block->getSrcImg($rule); ?>"
                 style="<?php echo $styleImg ?>">
            <span id="design-label-text-<?php echo $rule->getId() ?>-<?php echo $product->getId() ?>"
                  class="mpproductlabel-textlabel"
                  style="<?php echo $block->getTextStyle($rule); ?>"><?php echo $block->replaceLabel($block->getLabel($rule), $product->getId()); ?></span>
        </div>
        <style><?php echo $block->replaceCustomCss($rule, $product->getId()); ?></style>
    <?php endif; ?>
<?php endforeach; ?>
