<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Mageplaza_StoreLocator::css/storelocator.css"/>
        <css src="Mageplaza_StoreLocator::css/style.css"/>
        <css src="https://use.fontawesome.com/releases/v5.2.0/css/all.css" src_type="url"/>
        <css src="Mageplaza_Core::css/owl.carousel.css"/>
        <css src="Mageplaza_Core::css/owl.theme.css"/>
        <css src="Mageplaza_Core::css/font-awesome.min.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Mageplaza\StoreLocator\Block\Frontend" template="Mageplaza_StoreLocator::storelocator/index.phtml">
                <block class="Mageplaza\StoreLocator\Block\Store\Head" name="store.locator.head" as="store_locator_head" template="Mageplaza_StoreLocator::storelocator/head.phtml"/>
                <block class="Mageplaza\StoreLocator\Block\Store\Footer" name="store.locator.footer" as="store_locator_footer"/>
            </block>
            <referenceBlock name="page.main.title" remove="true"/>
        </referenceContainer>
    </body>
</page>